@font-face {
    font-family: 'YoungSerif';
    src: url('{{ "YoungSerif-Regular.eot" | asset_url }}'); /* IE9 Compat Modes */
    src: url('{{ "YoungSerif-Regular.eot?#iefix" | asset_url }}') format('embedded-opentype'), /* IE6-IE8 */
         url('{{ "YoungSerif-Regular.woff2" | asset_url }}') format('woff2'), /* Super Modern Browsers */
         url('{{ "YoungSerif-Regular.woff" | asset_url }}') format('woff'), /* Pretty Modern Browsers */
         url('{{ "YoungSerif-Regular.ttf" | asset_url }}')  format('truetype'), /* Safari, Android, iOS */
         url('{{ "YoungSerif-Regular.svg#svgFontName" | asset_url }}') format('svg'); /* Legacy iOS */
  }
 
 
 :root {
    --headline-font: 'YoungSerif','Georgia', 'Times New Roman', Times, serif;
    --text-font: 'Karla','Helvetica Neue', Arial, Helvetica, sans-serif;

    --black: #000;
    --white: #FFF;

    --light-black: #333;

    --text-color: #555;
    --text-color-white: #CCC;
    --text-color-light: #7070;
    --text-color-light-white: #AAA;

    --gold: #bfa582;

    --background-color: #F7F2EA;
    --header-background-color: #EEE6DD;
    --footer-background-color: #F4EDE6;
    --border-color: rgba(0,0,0,0,0.15);
    --border-color-white: rgba(255,255,255,0.15);

    --standard-border: 1px solid var(--border-color);
    --standard-border-white: 1px solid var(--border-color-white);

    --line-global: 20px;
    --gutter-global: var(--line-global);
    --offset-global: calc(var(--line-global)*2);

    --header-height: calc(var(--line-global)*4);

    --type-headline-lg: 50px;
    --type-headline-md: 30px;
    --type-body-med: 15px;
    --type-body-sm: 13px;

    --type-bold:700;
    --type-book:400;
}

/* Faux Mixins used for reference */

.mixin-flex-space-between {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mixin-spaced-caps {
    font-size: var(--type-body-sm);
    font-weight: var(--type-bold);
    text-transform: uppercase;
    letter-spacing: 0.075em;
}

.mixin-reset-input {
    appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    text-align: left;
}

/* Base */
* {
    font-family: var(--text-font);
    box-sizing: border-box;
}

html,
body {
    width: 100%;
    margin: 0;
    padding: 0;
    color:var(--black);
    line-height: var(--line-global);

}

body {
    font-size: var(--type-body-med);
    background-color: var(--background-color);
    background-image: url('{{ "background.jpg" | asset_url}}');
    background-size: 100%;
    background-attachment: fixed;
    background-repeat: no-repeat;
    padding-top: calc(var(--header-height) + var(--offset-global));
}

h1,h2,h3,h4,h5,h6,p,ol,ul {
    margin: 0;
    padding: 0;
    font-weight: var(--type-book);
}

ul,
ol {
    list-style-type: none;
}
/* Utility Classes */
.visually-hidden {
    position: absolute !important;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px);
    clip: rect(1px, 1px, 1px, 1px);
}
.wrapper {
    padding-left: var(--offset-global);
    padding-right: var(--offset-global);
}
.grid {
    display: grid;
    column-gap: var(--gutter-global);
    row-gap: var(--gutter-global);
}

.grid > * {
  min-width: 0;
  min-height: 0;
}

.grid.collapse {
    column-gap: 0;
    row-gap: 0;
}

.two-columns {
    grid-template-columns: 1fr 1fr;
}

.valign-center {
    display: flex;
    flex-direction: column;
    /*justify-content: center;*/
}

.valign-center:first-child > * {
    margin-top: auto;
}
.valign-center:last-child > * {
    margin-bottom: auto;
}


.ta-center {
    text-align: center;
}

.footer-global h4 {
  margin-bottom: var(--line-global);
}

.text-white {
    color: var(--white);
}

.text-white h1 .h1 h2 .h2 h3 .h3 h4 .h4 {
    color: var(--white);
}

.text-white p,
.accent-color
{
    color: var(--text-color-white);
}
.text-white a{
    color: var(--white);
}

/* Style Guide */
h1,
.h1,
h2,
.h2,
h3,
.h3{
  font-family: var(--headline-font);
  font-weight: var(--type-bold);
}
h3,
.h3 {
    line-height: var(--line-global);
}

h1,
.h1 {
    font-size: var(--type-headline-lg);
    line-height: calc(var(--line-global)*3);
}

h2,
.h2 {
    font-size: var(--type-headline-md);
    line-height: calc(var(--line-global) * 2);
}
h4,
.h4 {
    color: var(--light-black);
    font-size: var(--type-body-sm);
    font-weight: var(--type-bold);
    text-transform: uppercase;
    letter-spacing: 0.075em;
}

a {
    color: var(--text-color);
    text-decoration: none;
}

a:hover {
    opacity: 0.75;
}

p {
    color: var(--text-color);
}

p a {
   border-bottom: var(--standard-border);
}

p a:hover {
    border-bottom-color: var(--black);
}

button[type="submit"],
.button {
    /* included mixin-reset-input */
    appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    text-align: left;

    display: inline-block;
    width: 100%;
    padding: var(--line-global);
    text-align: center;
    font-size: var(--type-body-med);
    line-height: var(--line-global);
    background: var(--gold);
    color: var(--white);
}

button[type="submit"]:disabled,
.button {
    opacity: 0.75;
   /* cursor: not-allowed;
    text-decoration: line-through;*/
}

button[type="submit"]:not(:disabled):hover,
.button {
    background: hsl(24, 22%, 53%);
}

/* Header */
.header-global {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background-color: var(--header-background-color);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: var(--line-global) var(--offset-global);
    z-index: 1;
}

.text-link {
    font-size: var(--type-body-sm);
    font-weight: var(--type-bold);
    text-transform: uppercase;
    letter-spacing: 0.075em;
    color: var(--black);
}

.header-global 
.shop-link {
   order: -1;
}

.header-global
 .cart-close-text {
    display: none;
 }

 /* Footer */
 .footer-global {
   background-color: var(--footer-background-color);
   margin-top: var(--offset-global);
   border-top: var(--standard-border);
}

 .footer-top,
 .footer-bottom {
     padding: var(--offset-global);
 }

 .footer-top {
     grid-template-columns: 2fr 1fr 1fr; /* fr means fracion width*/
 }

 .footer-bottom {
    padding: var(--offset-global);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.social-links a {
    display: inline-block;
}

.social-links a:not(:last-child) {
  margin-right: calc(var(--line-global)/2);
}

/* Index Page */
.index-top {
    height: 50vh;
    min-height: 400px;
    padding-top: calc(var(--header-height) + var(--offset-global));
    padding-bottom: var(--offset-global);
}

.shop-title {
    margin-bottom: var(--line-global);
}

/* Shared Product Styles*/
.product-info-section {
    /* Extend text-white */
    background: var(--light-black);
    padding: var(--offset-global);
    display: flex;
    flex-direction: column;
    text-align: center;
}
.product-info-section .product-title {
    padding: var(--line-global) 0;
    margin-top: auto;
    margin-bottom: auto;
}

.product-info-section .price {
    display: inline-block;
    font-size: var(--line-global);
    color: var(--text-color-white);
    font-weight: var(--type-book);
    vertical-align: super;
}

.product-info-section .below-title {
    max-width: 396px;
    margin: 0 auto;
}

.product-info-section .product-description {
    margin-bottom: var(--line-global);
}

/* Product Card */
.product-card .card-image a{
   display: block;
   width: 100%;
   height: 100%;   
}

.product-card .card-image img {
    display: block;
    max-width: 100%;
    height: auto;
}

.product-card:nth-child(odd) .card-image{
   grid-column: 0;
   grid-row: 1;
}

/* Product Page*/
.product-image {
    width: 100%;
}

.product-image img {
    display: block;
    max-width: 100%;
    height: auto;
}

/* Add to Cart form */

.option-row {
    /* Include faux maxin flex-space-between*/
    text-align: left;
    padding: var(--line-global) 0;
    border-top: var(--standard-border-white);

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.option-row:last-of-type {
    border-bottom: var(--standard-border-white);
}

.option-title {
    color: var(--text-color-white);
}

.variant-radio {
    /*Extend .visually-hidden*/
    position: absolute !important;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px);
    clip: rect(1px, 1px, 1px, 1px);
}

.variant-radio + label {
    /*Include spaced-caps*/
    font-size: var(--type-body-sm);
    font-weight: var(--type-bold);
    text-transform: uppercase;
    letter-spacing: 0.075em;

    display: inline-block;
    cursor: pointer;
    padding: calc(var(--line-global)/5);
    border: 1px solid transparent;
    color: var(--text-color-light-white);
}

.variant-radio:checked + label {
    color: var(--white);
    border: 1px solid var(--white);
}

.variant-radio:disabled + label {
    cursor: not-allowed;
    text-decoration: line-through;
    color: var(--text-color);
}

.quantity-button {
    /*Include resut-input*/
    appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    text-align: left;

    font-size: var(--line-global);
    line-height: var(--line-global);
    text-align: center;
    font-weight: var(--type-bold);
    color: var(--text-color-white);
    width: var(--line-global);
}

.quantity-button:disabled {
    opacity: 0.5;
}

.quantity-button:not(:disabled):hover {
    color: var(--white);
}

.quantity-text {
    display: inline-block;
    text-align: center;
    min-width: var(--line-global);
    margin: 0 calc(var(--line-global)/2);
}

#add-to-cart-btn {
    margin-top: var(--line-global);
}

/* Cart page Styles*/

.cart-page-contents {
    background: var(--light-black);
    padding: var(--offset-global);
    max-width: 380px;
    margin: 0 auto;
}

/*Shared Cart Styles*/
.cart-lines {
    margin-top: var(--line-global);
    border-top: var(--standard-border-white);
    border-bottom: var(--standard-border-white);
    padding: var(--line-global) 0;
}

.cart-empty-text {
    margin: calc(var(--line-global)*4) 0;
}
/*Line Item Styles*/
.line-item {
    /*extend text-white and flex space between mixin*/
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.line-item .line-image {
    width: 80px;
    position: relative;
}

.line-item img {
    max-width: 100%;
    height: auto;
}

 .remove-line {
    position: absolute;
    width: var(--line-global);
    height: var(--line-global);
    top: calc(-(var(--line-global)/2));
    right: calc(-(var(--line-global)/2));
    display: none;
 }

 .line-item:hover .remove-line {
     display: inline-block;
 }


.line-item:not(:first-child) {
    margin-top: var(--line-global);
}

.subtotal-line {
    /*include flex space between*/
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;

    padding: var(--line-global) 0;
}
/*Mini Cart Styles */
#mini-cart {
    position: fixed;
    top: var(--header-height);
    bottom: 0;
    right: 0;
    width: 100%;
    max-width: 380px;
    background: var(--light-black);
    display: none;
    z-index: 1;
}

#mini-cart .mini-cart-contents {
   overflow: auto;
   padding: var(--offset-global);
   height: 100%;
}

/* Cart Toggle Styles*/
html.mini-cart-open {
    overflow: hidden;
}
html.mini-cart-open #mini-cart{
   display: block;
}

html.mini-cart-open .cart-link .cart-text{
  display: none;
}

html.mini-cart-open .cart-link .cart-close-text{
    display: inline-block;
  }

html.mini-cart-open main {
   opacity: 0.3;
   pointer-events: none;
}

/*Page Styles*/
#page {
    min-height: 80vh;
}
#page .page-content {
    margin-top: var(--offset-global);
}

#page .page-inner {
    max-width: 500px;
    margin: 0 auto;
}

/*404 Styles*/
#page-404 {
    min-height: calc(70vh - var(--header-height));
}

 
@media only screen and (max-width: 1023px) {
    .two-columns {
        grid-template-columns: 1fr;
   }
    .wrapper {
        padding-left: 20px;
        padding-right: 20px;
   }
    .mini-cart-contents {
        padding: 20px;
   }
    .product-card .card-image {
        grid-row: 1;
        grid-column: 1;
   }
    .product-card .card-info {
        grid-row: 2;
        grid-column: 1;
   }
    .product-image:first-of-type {
        grid-row: 1;
   }
    .product-info {
        grid-row: 2;
   }
    .option-fieldset {
        max-width: 50%;
   }
    .variant-radio + label {
        display: block;
   }
    .footer-top {
        grid-template-columns: 1fr;
   }
}
